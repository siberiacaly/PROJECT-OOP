@model FINALNIPROJEKTBOOP.Models.Director
@{
    ViewData["Title"] = "AddDirector";
}

<form asp-action="AddDirector" method="post">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Insert directors's first name:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Insert directors's surname:</label>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NameOfMovie" class="control-label">Director of inserted movie:</label>
        <input asp-for="NameOfMovie" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
