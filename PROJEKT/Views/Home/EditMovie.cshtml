@model IList<Movie>
@{
    ViewData["Title"] = "Edit Movie";
}
<h1>@ViewData["Title"]</h1>
@using(Html.BeginForm("EditMovie", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <table>
        @for (var i = 0; i < Model.Count; i++) {
            <tr>
                    <td><button type="submit" name="submitButton" value="@Model[i].Id">X</button></td>
                    <td>@Html.HiddenFor(m => Model[i].Id)
                        @Html.TextBoxFor(m => Model[i].NameOfMovie)
                    <td>@Html.TextBoxFor(m => Model[i].Genre)</td>
                    <td>@Html.TextBoxFor(m => Model[i].ReleaseDate)</td>
            </tr>
        }
    </table>
    <button type="submit" name="submitButton" value="0"> Save Changes </button>
}